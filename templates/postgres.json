{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "postgresql-for-keycloak",
    "creationTimestamp": null,
    "annotations": {
      "description": "PostgreSQL openshift Example",
      "iconClass": "icon-database",
      "tags": "database,postgresql"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "postgres",
        "labels": {
          "name": "postgres"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "postgres",
            "protocol": "TCP",
            "port": 5432,
            "targetPort": 5432,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "postgres"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Pod",
      "apiVersion": "v1",
      "metadata": {
        "name": "postgres",
        "labels": {
          "name": "postgres"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "postgres",
            "image": "postgres:9.6",
            "ports": [
              {
                "containerPort": 5432,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "POSTGRES_USER",
                "value": "keycloak"
              },
              {
                "name": "POSTGRES_PASSWORD",
                "value": "password"
              },
              {
                "name": "POSTGRES_DB",
                "value": "keycloak"
              }
            ],
            "volumeMounts": [
              {
                "mountPath": "/var/lib/pgsql/data",
                "name": "pgdatakc",
                "readOnly": false
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "pgdatakc",
            "persistentVolumeClaim": {
              "claimName": "pvc-pgdatakc"
            }
          }
        ]
    }
  },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "pvc-pgdatakc"
      },
      "spec": {
        "accessModes": [
          "ReadWriteMany"
        ],
        "resources": {
          "requests": {
            "storage": "5Gi"
          }
        }
      }
    }
  ]
}